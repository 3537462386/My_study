/* pages/serch/serch.wxss */
.container {
    margin: 0;
    padding: 0;
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #F5F5F5;

}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
}

.userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.group image {
    width: 80rpx;
    height: 80rpx;
}

.group {

    
    margin: 20rpx 0;
}

.item {background-color: white;
  margin: 20rpx 0;
    display: flex;
    flex-direction: row;
    border: 0.1rpx solid #F5F5F5;
    padding: 10rpx;
    align-items: center;
}